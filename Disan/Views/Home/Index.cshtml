@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

 <!-- Latest property -->
    <section id="aa-latest-property">
        <div class="container">
            <div class="aa-latest-property-area">
                <div class="aa-title">
                    <h2>Latest Products</h2>
                    <span></span>
                    <p>Products.</p>
                </div>
                <div class="aa-latest-properties-content">
                    <div class="row">
                        @foreach (var pro in Model)
                       {
                          <div class="col-md-4">
                            <article class="aa-properties-item">
                                <a href="#" class="aa-properties-item-img">
                                    <img src="@Url.Content(pro.ProductImage)" alt="img">
                                </a>
                                <div class="aa-tag for-sale">
                                    @if (pro.inStock == true)
                                    {
                                       <span class="text-success">Avaliable</span> 
                                    }
                                    else
                                    {
                                        <span class="text-danger">Out of stock</span>
                                    }
                                </div>
                                <div class="aa-properties-item-content">
                                    <div class="aa-properties-info">
                                        <span>Price</span>
                                        <span>@pro.Price</span>
                                        <span>Qty</span>
                                        <span>@pro.Qty</span>
                                    </div>
                                    <div class="aa-properties-about">
                                        <h3><a>@pro.ProductName</a></h3>
                                        <p>
                                            @pro.ProductDesc.Substring(0,15)
                                        </p>
                                    </div>
                                    <div class="aa-properties-detial">
                                        <span class="aa-price">
                                           @pro.Price Da
                                        </span>
                                        <a asp-action="ProductDetails" asp-route-id="@pro.ProductId" class="aa-secondary-btn">View Details</a>
                                    </div>
                                </div>
                            </article>
                        </div>  
                       }
                       
                       
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- / Latest property -->
